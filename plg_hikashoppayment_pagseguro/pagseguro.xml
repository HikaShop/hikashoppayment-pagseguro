<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="hikashoppayment">
	<name>Hikashop Pagseguro Payment Plugin</name>
	<creationDate>Oct 2013</creationDate>
	<version>1.0.0</version>
	<author>Jobadoo Webdesign</author>
	<authorEmail>contato@jobadoo.com.br</authorEmail>
	<authorUrl>http://www.jobadoo.com.br</authorUrl>
	<copyright>Copyright (C) 2013 Jobadoo Webdesign - All rights reserved.</copyright>
	<license></license>
	<description>This plugin enables you to setup your Pagseguro payment system</description>
	<files>
		<filename plugin="pagseguro">pagseguro.php</filename>
		<filename>pagseguro_configuration.php</filename>
		<filename>pagseguro_end.php</filename>
		<folder>PagSeguroLibrary</folder>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>